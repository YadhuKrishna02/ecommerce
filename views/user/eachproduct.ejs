                          class="button button-add-to-cart"
                          onclick="addtocart('<%-data._id%>');Swal.fire({
                          position: 'center',
                          icon: 'success',
                          title: 'Product is successfully added to cart',
                          showConfirmButton: false,
                          timer: 1500
                        })"
                        >
