<main class="main">
  <section class="mt-50 mb-50">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="table-responsive">
            <% if(cartItems.length==0){%>
            <div class="d-flex justify-content-center">
              <img src="/assets/imgs/banners/empty-cart-1546860808" alt="" />
            </div>
            <%} else{%>

            <table class="table shopping-summery text-center clean">
              <thead>
                <tr class="main-heading">
                  <th scope="col">Image</th>
                  <th scope="col">Name</th>
                  <th scope="col">Price</th>
                  <th scope="col">Quantity</th>
                  <!-- <th scope="col">Subtotal</th> -->
                  <th scope="col">Remove</th>
                </tr>
              </thead>

              <tbody>
                <% cartItems.forEach(function(cartItems){%>
                <tr>
                  <td>
                    <img src="/uploads/<%=cartItems.cartItems.Image %>" />
                  </td>
                  <td class="product-des product-name">
                    <h5 class="product-name">
                      <a href="shop-product-right.html"
                        ><%=cartItems.cartItems.Productname%></a
                      >
                    </h5>
                    <p class="font-xs"><%=cartItems.cartItems.category%></p>
                    <p class="font-xs">
                      <%=cartItems.cartItems.ProductDescription%>
                    </p>
                  </td>
                  <td class="price" cartItemss-title="Price">
                    <span><%=cartItems.cartItems.Price%> </span>
                  </td>
                  <td class="text-center" cartItemss-title="Stock">
                    <div class>
                      <button
                        class="cart-item-count mr-5"
                        onclick="changeQuantity('<%= cartItems._id%>','<%= cartItems.item %>','<%= userId.id %>',-1)"
                      >
                        -
                      </button>
                      <span id="<%= cartItems.item %>"
                        ><%= cartItems.quantity%></span
                      >
                      <button
                        class="cart-item-count ml-5"
                        onclick="changeQuantity('<%= cartItems._id%>','<%= cartItems.item %>','<%= userId.id %>',1)"
                      >
                        +
                      </button>
                    </div>
                  </td>
                  <!-- <td class="text-right" cartItemss-title="cartItems">
                                            <span>hlo </span>
                                        </td> -->
                  <td class="action" cartItemss-title="Remove">
                    <button
                      class="text-muted"
                      onclick="removeItem('<%-cartItems._id%>','<%-cartItems.item%>')"
                    >
                      <i class="fi-rs-trash"></i>
                    </button>
                  </td>
                </tr>

                <%}) %>
              </tbody>
              <%} %>
            </table>
          </div>

          <div class="divider center_icon mt-50 mb-50">
            <i class="fi-rs-fingerprint"></i>
          </div>
          <div class="row mb-50">
            <div class="col-lg-6 col-md-12">
              <div class="mb-30 mt-50">
                <div class="heading_s1 mb-3">
                  <h4>Apply Coupon</h4>
                </div>
                <div class="total-amount">
                  <div class="left">
                    <div class="coupon">
                      <form action="/cartItems" target="_blank">
                        <div class="form-row row justify-content-center">
                          <div class="form-group col-lg-6">
                            <input
                              type="text"
                              class="form-control"
                              autocomplete="off"
                              required
                              id="code"
                              placeholder="coupon code"
                            />
                          </div>
                          <div class="form-group col-lg-6">
                            <button
                              class="btn btn-sm"
                              type="button"
                              onclick="couponValidator(this,'<%=total%>')"
                            >
                              <i class="fi-rs-label mr-10"></i>Apply
                            </button>
                          </div>
                        </div>
                      </form>
                      <span class="couponErr"></span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-lg-6 col-md-12">
              <div class="border p-md-4 p-30 border-radius cartItems-totals">
                <div class="heading_s1 mb-3">
                  <h4>Price Details</h4>
                </div>
                <div class="table-responsive">
                  <table class="table">
                    <tbody>
                      <tr>
                        <td class="cartItems_total_label">
                          cartItems Subtotal
                        </td>
                        <td class="cartItems_total_amount">
                          ₹<span id="subtotal" class="font-lg fw-900 text-brand"
                            ><%= total%></span
                          >
                        </td>
                      </tr>
                      <tr>
                        <td class="cartItems_total_label">Shipping</td>
                        <td class="cartItems_total_amount">
                          <i class="ti-gift mr-5"></i> Free Shipping
                        </td>
                      </tr>
                      <tr>
                        <td class="cartItems_total_label">Total</td>
                        <td class="cartItems_total_amount">
                          <strong
                            >₹<span id="total" class="font-xl fw-900 text-brand"
                              ><%= total%></span
                            ></strong
                          >
                        </td>
                      </tr>
                    </tbody>
                  </table>
                </div>
                <a href="/check_out" class="btn">
                  <i class="fi-rs-box-alt mr-10"></i> Proceed To CheckOut</a
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>

<script>
  function changeQuantity(cartId, prodId, userId, count) {
    let quantity = parseInt(document.getElementById(prodId).textContent);
    let couponTotal;
    count = parseInt(count);

    $.ajax({
      url: '/change_product_quantity',
      method: 'PUT',
      data: {
        user: userId,
        cart: cartId,
        product: prodId,
        count: count,
        quantity: quantity,
      },
      success: (response) => {
        if (response.removeProduct) {
          Swal.fire('OOPs!', 'Product removed from cart', 'success');
          location.reload();
        } else {
          let cartQuantity = quantity + count;
          document.getElementById(prodId).innerHTML = cartQuantity;
          document.getElementById('total').innerHTML = response.total;
          document.getElementById('subtotal').innerHTML = response.total;
        }
      },
    });
  }
  function removeItem(cartId, prodId) {
    Swal.fire({
      title: 'Are you sure?',
      text: "You won't be able to revert this!",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Yes, delete it!',
    }).then((result) => {
      if (result.isConfirmed) {
        $.ajax({
          url: '/delete_cart_item',
          data: {
            cartId: cartId,
            product: prodId,
          },
          method: 'DELETE',
          success: (response) => {
            if (response.removeProduct) {
              Swal.fire('Deleted!', 'Your file has been deleted.', 'success');
              location.reload();
            }
          },
        });
      }
    });
  }
  function couponValidator(elem, total) {
    code = document.getElementById('code').value.trim();
    // couponTotal = document.getElementById("total").value;
    $.ajax({
      url: '/coupon_validator?code=' + code,
      method: 'get',
      success: (response) => {
        if (response.status == true) {
          $.ajax({
            url: '/coupon_verify?code=' + code,
            method: 'get',
            success: (response) => {
              if (response.status == true) {
                $.ajax({
                  url: '/apply_coupon?code=' + code,
                  method: 'post',
                  data: {
                    total: total,
                  },
                  success: (response) => {
                    if (response.status == true) {
                      document.querySelector('.couponErr').style.color =
                        '#19ff11';
                      document.querySelector('.couponErr').innerHTML =
                        'Coupon Applied Succesfully';
                      document.getElementById('total').innerHTML =
                        total - response.discountAmount;
                    } else {
                      document.querySelector('.couponErr').style.color =
                        '#ff0707';
                      document.querySelector('.couponErr').innerHTML =
                        response.reason;
                    }
                  },
                });
              } else {
                document.querySelector('.couponErr').style.color = '#ff0707';
                console.log('failed', response.reason);
                document.querySelector('.couponErr').innerHTML =
                  response.reason;

                setTimeout(function () {
                  document.querySelector('.couponErr').style.display = 'none';
                }, 3000);
              }
            },
          });
        } else {
          document.querySelector('.couponErr').style.color = '#ff0707';
          document.querySelector('.couponErr').innerHTML = response.reason;
          console.log('failed', response.reason);

          // setTimeout(function () {
          //   document.querySelector(".couponErr").style.display = "none";
          // }, 3000);
        }
      },
    });
  }
</script>
